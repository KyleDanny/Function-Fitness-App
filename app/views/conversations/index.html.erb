<div class="container" id="inbox-form-card-margin">
   <div class="col-md-8 m-auto form-card-shadow">
    <h3><i class="far fa-envelope"></i> Messages </h3>

    <div class="p-2 rounded m-2 ">
      <div class="">
        <% @conversations.each do |conversation| %>
          <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
            <% if conversation.sender_id == current_user.id %>
              <% recipient = User.find(conversation.recipient_id) %>
            <% else %>
              <% recipient = User.find(conversation.sender_id) %>
            <% end %>
            <p class="link-remove"> <%= link_to recipient.name, conversation_messages_path(conversation), class: "link-remove" %> </p>
          <% end %>
        <% end %>
      </div>
    </div>

  <div class="">
    <h3><i class="far fa-address-book"></i> My contacts </h3>
    <div class="p-2 rounded m-2 w-50">
      <% @users.each do |user| %>
        <% if user.id != current_user.id %>

            <div class="mb-2 border-bottom">
              <div class="trio-margin">
                <small> <i class="fas fa-hashtag"></i> <%= %> </small><br>
                <small> <i class="fas fa-user"></i> <%= user.name %> </small><br>
                <small> <i class="fas fa-mobile"></i> <%= user.mobile_num %> </small><br>
              </div>
              

              <div class="btn-margin-inbox">
                <small> <i class="fas fa-paper-plane "></i> <%= link_to 'Send a message', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class:"btn-theme"%> </small>
              </div>
              
            </div>

        <% end %>
      <% end %>
    </div>
  </div>

  </div>
</div>

