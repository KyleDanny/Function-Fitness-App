<div class="container">
  <div class="row justify-content-center p-3">
    <div class="col-md-6 m-2 p-4 form-card-shadow">

    <div class= "row justify-content-center">
      <div class="col-md-3">
        <% if @personalized_trainer.photo.attached? %>
            <td> <%= cl_image_tag @personalized_trainer.photo.key, :gravity=>"face", :height=>100, :width=>100, :zoom=>0.7, radius: "max", :crop=>"fill"%> </td>
          <% else %>
            <td> </td>
          <% end %>
      </div>
      <div class="col-md-9">
        <h4>Edit Personal Trainer: </h4>
        <h5><i class="far fa-edit link-theme-yell"></i> <%= @personalized_trainer.name %></h5>
      </div>
    </div>

        <%= simple_form_for(@personalized_trainer) do |f| %>
        <%= f.input :name %>
        <%= f.input :category, placeholder: 'eg. crossfit' %>
        <%= f.input :education, placeholder: 'eg. university/diploma' %>
        <%= f.input :description, placeholder: 'eg. tell us about your trainer' %>
        <%= f.input :location, placeholder: 'eg. city' %>
        <%= f.input :rate, placeholder: 'per day' %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn-theme" %>
        <% end %>

    </div>
  </div>
</div>
