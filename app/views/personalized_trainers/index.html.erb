
<div class="container">
  <h1 class="text-center"><strong> Personal Trainers </strong></h1>
  <div class="row">

    <div class="col-5 mb-2">
      <% @personalized_trainers.each do |personalized_trainer| %>
      <div class="card-product w-100 p-3 shadow p-3 mb-3 bg-white rounded">
        <% if personalized_trainer.photo.attached? %>
        <%= cl_image_tag personalized_trainer.photo.key, crop: :fill%>
        <% else %>
        <p> " " </p>
        <% end %>
        <div class="card-product-infos">
          <h4 class="card-title"><%= link_to personalized_trainer.name, personalized_trainer_path(personalized_trainer.id) %></h4>
          <h5> Category: <%= personalized_trainer.category %></h5>
          <p class="card-text"> City: <%= personalized_trainer.location %></p>
          <p class="card-text"> <%= personalized_trainer.description %></p>
          <p class="card-text"> <%= personalized_trainer.rate %> NOK</p>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-7">
      <div class="sticky-top">
        <div class="" id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>


</div>
</div>

