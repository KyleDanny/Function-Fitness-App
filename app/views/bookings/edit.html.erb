<div id="booking" class="section">
  <div class="section-center">

  <div class="row justify-content-center">
    <h3> Change My Booking </h3>
  </div>

  <div class="row justify-content-center">
    <h6 class="text-center mb-5"><strong><%= @booking.personalized_trainer.category.upcase %></strong> PT : <strong><%= @booking.personalized_trainer.name %></strong></h6>
  </div>

  <div class="row justify-content-center">
    <h6 class="text-center mb-5">Dates: <strong><%= @booking.start_date %></strong> - <strong><%= @booking.end_date %></strong></h6>
  </div>

    <div class="container">
      <div class="row justify-content-center">
         <div class="booking-form">
           <form>
             <div class="row no-margin">
               <div class="col-sm-6">
                 <div class="form-group">
                   <span class=form-label>Start Date</span>
                   <%= simple_form_for([@booking.personalized_trainer, @booking]) do |f| %>
                     <%= f.input :start_date, label:false,  as: :string, input_html: {type: :date} %>
                  </div>
                </div>

                <div class="col-sm-6">
                  <div class="form-group">
                    <span class=form-label>End Date</span>
                    <%= f.input :end_date, label:false, as: :string, input_html: {type: :date} %>
                  </div>
                </div>
             </div>

             <div class="form-group">
               <span class="form-label">Goal</span>
               <%= f.input :goal, label:false, class: "btn btn-primary btn-lg btn-block btn-booking" %>
             </div>
             
             <div class="form-check">
               <input type="checkbox" class="form-check-input" id="exampleCheck1">
               <label class="form-check-label" for="exampleCheck1">Check me out</label>
              </div>

             <div class="form-btn">
               <%= f.submit "Update booking", class: "btn btn-primary mb-2", data: { confirm: "Are you sure you want to change your booking?" } %>
               <%= link_to "Back to booking list", dashboard_path, class: "btn btn-primary mb-2" %>       
             </div>
               <% end %>
           </form>
         </div>
      </div>
    </div>
  </div>
</div>
