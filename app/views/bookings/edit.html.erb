<div class="container">
 <div class="row justify-content-center">

  <%= simple_form_for([@booking.personalized_trainer, @booking]) do |f| %>

  <div class="row justify-content-center">
  <h3> Change My Booking </h3>
  </div>

  <div class="row justify-content-center">
  <h6><strong><%= @booking.personalized_trainer.category.upcase %></strong> PT : <strong><%= @booking.personalized_trainer.name %></strong></h6>
  </div>

  <div class="dates">
    <div class="form-inputs">
      <div class="form-row">
        <%= f.input :start_date, as: :string, input_html: {type: :date} %>
        <%= f.input :end_date, as: :string, input_html: {type: :date} %>
      </div>
    </div>
  </div>

  <div class="form-inputs">
    <%= f.input :goal, class: "btn btn-primary btn-lg btn-block btn-booking" %>
    <%= f.submit "Update booking", class: "btn btn-success btn-lg btn-block btn-booking", data: { confirm: "Are you sure you want to change your booking?" } %>
    <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-primary btn-lg btn-block btn-booking" %>
  </div>
  <% end %>
  </div>
</div>
