

<div class="container">

  <div class="">
    <h2>How was your session with <%= @booking.personalized_trainer.name %> ?</h2>
    <h3> Leave a Review: </h3>
  </div>

  <div class="row">
    <div class="col-6">
      <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating, input_html: { min: '0', max: '5', step: '1' } %>
        <%= f.input :recommend, as: :radio_buttons %>
        <%= f.submit "Submit review", class: "btn-theme" %>
      <% end %>
    </div>
  </div>

</div>


